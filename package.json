{
	"name": "@konceiver/foreman",
	"version": "1.0.0",
	"description": "Programmatic use of pm2 without callback hell.",
	"homepage": "https://github.com/konceiver/foreman",
	"bugs": {
		"url": "https://github.com/konceiver/foreman/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/konceiver/foreman.git"
	},
	"license": "MIT",
	"author": "Konceiver Oy <info@konceiver.dev>",
	"files": [
		"dist"
	],
	"main": "dist/index",
	"types": "dist/index",
	"scripts": {
		"build": "yarn clean && tsc",
		"build:watch": "yarn build -w",
		"clean": "rimraf .coverage dist tmp",
		"format": "yarn lint && yarn prettier",
		"lint": "eslint src --ext .ts --fix",
		"prepublishOnly": "yarn build",
		"prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\"",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"semantic-release": "semantic-release"
	},
	"jest": {
		"bail": true,
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!**/node_modules/**"
		],
		"coverageDirectory": "<rootDir>/.coverage",
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"clover",
			"html"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"setupFilesAfterEnv": [
			"jest-extended"
		],
		"testEnvironment": "node",
		"testMatch": [
			"**/*.test.ts"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"verbose": true
	},
	"dependencies": {
		"execa": "^5.0.0"
	},
	"devDependencies": {
		"@hapi/hapi": "^20.1.0",
		"@sindresorhus/tsconfig": "^0.8.0",
		"@types/hapi__hapi": "^20.0.5",
		"@types/jest": "^26.0.20",
		"@types/node": "^14.14.27",
		"@types/prettier": "^2.2.1",
		"@types/rimraf": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^4.15.0",
		"@typescript-eslint/parser": "^4.15.0",
		"@yarnpkg/pnpify": "^2.4.0",
		"eslint": "^7.20.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-jest": "^24.1.3",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"jest": "^26.6.3",
		"jest-extended": "^0.11.5",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"semantic-release": "^17.3.9",
		"ts-jest": "^26.5.1",
		"typescript": "^4.1.5",
		"typescript-language-server": "^0.5.1"
	}
}
